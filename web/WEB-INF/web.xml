<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>PdfServlet</servlet-name>
        <servlet-class>net.sf.jasperreports.j2ee.servlets.PdfServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DolarServlet</servlet-name>
        <servlet-class>jp.servlet.DolarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacturaServlet</servlet-name>
        <servlet-class>jp.servlet.FacturaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DolarServlet</servlet-name>
        <url-pattern>/DolarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacturaServlet</servlet-name>
        <url-pattern>/FacturaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>    
    <filter>
        <filter-name>FiltroSeguridad</filter-name>
        <filter-class>jp.seguridad.FiltroSeguridad</filter-class>
        <init-param>
            <param-name>pattern</param-name>
            <param-value>logout</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FiltroSeguridad</filter-name>
        <url-pattern>/content/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>    
</web-app>